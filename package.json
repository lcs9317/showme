{
  "name": "showme",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "pub:docs": "shx rm -rf docs && shx mkdir -p docs && shx cp -r out/* docs",
    "deploy": "cross-env GITHUB_ACTIONS=true next build && npm run pub:docs && git add docs && git commit -m \"docs: publish\" && git push"
  },
  "dependencies": {
    "next": "15.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "gh-pages": "^6.3.0",
    "shx": "^0.4.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
